<div class="row">
  
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
        <div class="well profile" style="min-width: 100%;">
            <div class="col-sm-12 ">
                <h3>Order History </h3>
                {{# if orders}}
                <table  class="table table-bordered">
                    <th>Order ID</th>
                    <th>Total Amount</th>
                    <th>Order Status</th>
                    <th>Date</th>
                    <th>Action</th>
                    {{# each orders }}
                    <tr>
                        <td>{{this.orderId}}</td>
                        <td>{{formatNumber this.totalAmount}}TK</td>
                        <td>{{this.currentStatus}}</td>
                        <td>{{formatDate this.created}}</td>
                        <td><a href="/orders/orderDetails/{{this._id}}">Details</a></td>
                    </tr>
                    {{/each}}
                </table>
                {{else}}
                No Order History
                {{/if}}  
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
        <div class="well profile" style="min-width: 100%;">
            <div class="col-sm-12 ">
                <h3>Wishlist</h3>
                {{# if wishlists}}
                <table  class="table table-bordered">
                    <th>Products</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Date</th>
                    {{# each wishlists.items }}
                    <tr>
                        <td>{{this.product.name}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{formatNumber this.price}}TK</td>
                        <td>{{formatDate this.addedDate}}</td>
                    </tr>
                    {{/each}}
                </table>
                {{else}}
                No posts
                {{/if}}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
        <div class="well profile" style="min-width: 100%;">
            <div class="col-sm-12 ">
                <h3>Posts </h3>
                {{# if posts}}
                <table  class="table table-bordered">
                    <th>Title</th>
                    <th>Text</th>
                    <th>Date</th>
                    {{# each posts }}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.text}}</td>
                        <td>{{formatDate this.createDate}}</td>
                    </tr>
                    {{/each}}
                </table>
                {{else}}
                No posts
                {{/if}}
            </div>
        </div>
    </div>
</div>