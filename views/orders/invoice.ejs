<%- include('../partials/_head') %>

<div class="row" id="mycanvas">  
        <div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>

            <div class="panel-body" id="mycanvas">

                <table class="table">
                    <tbody>
                        <tr>
                            <td><b> Order ID:</b></td>
                            <td><%=order._id%></td>
                            <td><b>Invoice No:</b></td>
                            <td><%=invoice%></td>
                        </tr>
                        <tr>
                            <td><b>Customer:</b></td>
                            <td><%=order.user.profile.name%></td>
                            <td><b>Stock Location:</b></td>
                            <td><%=user.branch%></td>
                        </tr>
                        <tr>
                            <td><b>E-Mail:</b></td>
                            <td><%=order.user.email%></td>
                            <td><b>Sales Person:</b></td>
                            <td><%=user.name%></td>
                        </tr>
                        <tr>
                            <td><b>Telephone:</b></td>
                            <td><%=order.user.contact%></td>
                            <td><b>Entry By:</b></td>
                            <td><%=user.name%></td>
                        </tr>
                        <tr>
                            <td><b>Payment Method:</b></td>
                            <td><%=order.paymentMethod%></td>
                            <td><b>Address:</b></td>
                            <td><%=order.address%></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-body">
                <div class="product">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <td class="text-left">S/L N</td>
                                    <td class="text-left">Product</td>
                                    <td class="text-right">Quantity</td>
                                    <td class="text-right">Unit Price</td>
                                    <td class="text-right">Total</td>
                                </tr>
                            </thead>
                            <tbody>
                             <% for(let i=0; i< order.cart.length; i++){ %>

                                

                                <tr>
                                    <td><%=order.cart[i].num%></td>
                                    <td class="text-left">
                                        <a href="#"><%=order.cart[i].product.name%></a>
                                        <br>
                                        <% if(order.cart[i].product.warranty) { %>
                                        <p><b>Warranty:</b>
                                            <%=order.cart[i].product.warranty%>
                                           
                                        <br>
                                        <% } %>
                                        </p>
                                        <p>SN:
                                            <% for(let i=0; i< order.cart[i].serial.length; i++){ %>
                                            <%=order.cart[i].serial[i]%> 
                                            <% } %>
                                        <br>
                                    </td>
                                    <td class="text-right"><%= order.cart[i].quantity%></td>
                                    <td class="text-right"><%= order.cart[i].unitPrice%>TK</td>
                                    <td class="text-right"><%= order.cart[i].price%>TK</td>
                                </tr>
                                <% } %>

                                <tr>
                                    <td colspan="4" class="text-right">Shipping Cost:</td>
                                    <td class="text-right"><%= order.shippingCharge%>TK</td>
                                </tr>
                                <tr>
                                    <td colspan="4" class="text-right">Total:</td>
                                    <td class="text-right"><%= order.totalAmount%>TK</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <br><br>
                <div class="pull-right">
                    <p class="pull-right">_____________</p><br>
                    <p class="pull-right">Authorised Signature and Company Stamp</p>
                </div><br><br>
                <div>
                    <p>Signature and Company Stamp</p>
                    <p>Goods sold and received or accepted by the customers are not returnable.</p>
                    <p>Warranty will void of all products if sticker is removed.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<button class="btn btn-info text-center pull-right" style="background-color: #0747a6; margin-bottom:10px;"
    onclick="myFunction()" id="buttonID">Download</button>
</div>

<%- include('../partials/_footer') %>
