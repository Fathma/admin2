<%- include('../partials/_head') %>

<div class="row">

        <div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>

            <div class="panel-body">
                
   

                <table class="table">
                    <tbody>
                        <tr>
                            <td><b> Order ID:</b></td>
                            <td><%=invoice.order.orderId%></td>
                            <td><b>Invoice No:</b></td>
                            <td><%=invoice.invoiceId%></td>
                        </tr>
                        <tr>
                            <td><b>Customer:</b></td>
                            <td><%=invoice.order.user.profile.name%></td>
                            <td><b>E-Mail:</b></td>
                            <td><%=invoice.order.user.email%></td>
                        </tr>
                        <tr>
                            <td><b>Name:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddressName%></td>
                            <td><b>Contact:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddressPhone%></td>
                        </tr>
                        <tr>
                            <td><b>Address:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddress1%>,<%=invoice.order.shippingAddress.shippingAddress2%></td>
                            <td><b>District:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddressDistrict%></td>
                        </tr>
                        <tr>
                            <td><b>Division:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddressDivision%></td>
                            <td><b>City:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddressCity%></td>
                        </tr>
                        <tr>
                            <td><b>Postal Code:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddressPostalCode%></td>
                            <td><b>Country:</b></td>
                            <td><%=invoice.order.shippingAddress.shippingAddressCountry%></td>
                        </tr>
                        <tr>
                            <td><b>Payment Method:</b></td>
                            <td><%=invoice.order.paymentMethod%></td>
                            <td><b>Payment Method:</b></td>
                            <td><%= moment(invoice.created).format( 'MMM-DD-YYYY') %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-body">
                <div class="product">
                    <div class="table-responsive">
                        <table class="table table-bordered" >
                            <thead>
                                <tr>
                                    <td class="text-left">S/L N</td>
                                    <td class="text-left">Product</td>
                                    <td class="text-right">Quantity</td>
                                    <td class="text-right">Unit Price</td>
                                    <td class="text-right">Total</td>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i< invoice.order.cart.length; i++){ %>

                                
                                <tr>
                                    <td><%= invoice.order.cart[i].num%></td>
                                    <td class="text-left">
                                        <a href="#"><%= invoice.order.cart[i].product.name%></a>
                                        <br>
                                        <% if(invoice.order.cart[i].product.warranty) { %>
                                        <p><b>Warranty:</b>
                                            <%= invoice.order.cart[i].product.warranty%>
                                           
                                        <br>
                                        <% } %></p>

                                        <p>SN:
                                        <% for(let j=0; j< invoice.order.cart[i].serials.length; j++){ %>
                                        
                                            <% if(invoice.order.cart[i].serials[j].number){ %>
                                             <%=invoice.order.cart[i].serials[j].number%> 
                                             <% }else { %>
                                             <%=invoice.order.cart[i].serials[j].sid%>
                                             <% } %>
                                             <% } %></p>
                                        <br>
                                    </td>
                                    <td class="text-right"><%= invoice.order.cart[i].quantity%></td>
                                    <td class="text-right"><%= invoice.order.cart[i].unitPrice%>TK</td>
                                    <td class="text-right"><%= invoice.order.cart[i].price%>TK</td>
                                </tr>
                                <% } %>
                                <tr>
                                    <td colspan="4" class="text-right">Shipping Cost:</td>
                                    <td class="text-right"><%= invoice.order.shippingCharge%>TK</td>
                                </tr>
                                <tr>
                                    <td colspan="4" class="text-right">Total:</td>
                                    <td class="text-right"><%= invoice.order.totalAmount%>TK</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <br><br>
                <div class="pull-right">
                    <p class="pull-right">_____________</p><br>
                    <p class="pull-right">Authorised Signature and Company Stamp</p>
                </div><br><br>
                <div>
                    <p>Signature and Company Stamp</p>
                    <p>Goods sold and received or accepted by the customers are not returnable.</p>
                    <p>Warranty will void of all products if sticker is removed.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<button class="btn btn-info text-center pull-right" style="background-color: #0747a6; margin-bottom:10px;"
    onclick="myFunction()" id="buttonID">Download</button>
</div>
<%- include('../partials/_footer') %>
