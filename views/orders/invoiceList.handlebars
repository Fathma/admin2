<div class="container-fluid" style="width:100%;min-height: 700px">
    <div class="register-logo">
        <a href="#"><b>Invoice</b>List</a>
    </div>
 <div class="row">
        <button class="btn bg-green" style="float: right;margin: 10px 20px;" id="btnExport"
            onclick="javascript:xport.toXLS('ptable');">
            <li class="fa fa-download" style="padding: 5px"></li>Export as Excel
        </button>
        
    </div><br>
    <div style="background-color: white">
        <table id="ptable" style="width:100%" class="table table-striped" >
            <thead>
            <tr>
                <th>#</th>
                <th>INVOICE NUMBER </th>
                <th>ORDER ID</th>
                <th>ORDER DATE</th>
                <th>STATUS</th>
                <th>TOTAL</th>
                <th>ACTION</th>
            </tr>
            </thead>
            <tbody>
          {{# each invoices}}
            <tr>
                <td>{{this.count}}</td>
                <td>{{this.invoiceId}}</td>
                <td>{{this.order.orderId}}</td>
                {{!-- <td>{{this.order.created}}</td> --}}
                <td>{{this.order.currentStatus}}</td>
                <td>{{this.order.totalAmount}}TK</td>
                <td><a href="/orders/ViewInvoice/{{this._id}}" data-toggle="tooltip" data-placement="top" title="View details"  class="btn btn-primary btn-sm">View</a></td>
            </tr>
           
            {{/each}}
            </tbody>
        </table>

    </div>

</div>
<br>
<script>
    $(document).ready(function() {
        $('#ptable').DataTable( {
            stateSave: true
        } );
    } );
</script>