
<div class="container-fluid">

    <div class="box">
        <div id="#PRODUCT"></div>
        <button class="collapsible">
            <li class="fa fa-info panel-icon" style="padding: 5px;"></li><span>SPECIFICATION INFO</span><span
                style="float:right" id="sp">+</span>
        </button>

        <div class="content" style="background-color: white; min-height: 100px; display:block">
            <div class="register-logo">
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">

                        <div class="well">
                            <form action="/category/updateSubCategory" method="POST">
            
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="cate">Category
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="hidden" name="id" id="id" value="{{subcategory._id}}">
                                        <select class="form-control inp" name="category" id="category"  required>
                                            <option value="">Select One</option>
                                            {{# each cat}}
                                            <option value="{{this._id}}"  {{# equality this._id ../subcategory.category }}selected{{/equality}}>{{this.name}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="name">Sub Category
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="name" id="name" class="form-control inp" value='{{subcategory.name}}' required>
                                    </div>
                                </div>
                                <br>
                                
                                <div class="row">
                                    <center>
                                        <button type="submit" class="btn btn-default btn-md">Update</button>
                                    </center>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="box">
        <div id="#PRODUCT"></div>
        <button class="collapsible">
            <li class="fa fa-info panel-icon" style="padding: 5px;"></li><span>DISCOUNT</span><span
                style="float:right" id="sp">+</span>
        </button>

        <div class="content" style="background-color: white; min-height: 100px; display:block">
            <div class="register-logo">
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">
                        <div class="well">
                            <form action="/category/SaveDiscountSubCategory" method="POST">
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="discount">Discount</label>
                                    </div>
                                    <div class="col-md-6">
                                         <input type="hidden" name="id" id="id" value="{{subcategory._id}}">
                                        <select name="discount" id="discount" class="form-control inp">
                                            <option value="">Select One</option>
                                             {{# each discount}}
                                                <option value="{{this._id}}" {{# equality this._id ../subcategory.discount }}selected{{/equality}}>{{this.name}}:{{# if this.usePercentage}}{{this.discountPercent}}%{{else}}{{this.discountAmount}}TK{{/if}}Off</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <center>
                                        <button type="submit" class="btn btn-default btn-md">Update</button>
                                    </center>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
