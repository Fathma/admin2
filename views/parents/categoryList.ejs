
<%- include('../partials/_head') %>

<div class="container-fluid" style="width:100%;min-height: 700px">
    <div class="register-logo">
        <a href="#"><b>Category</b>List</a>
    </div>
    <div class="row">
        <button class="btn bg-green" style="float: right;margin: 10px 20px;" id="btnExport" onclick="javascript:xport.toXLS('ptable');"> <li class="fa fa-download" style="padding: 5px"></li>Export as Excel</button>
        <a  class="btn bg-purple" href="/category/newCategory" style="float: right;margin: 10px 5px;"><li class="fa fa-plus-square" style="padding: 5px"></li>New Category</a>
</div><br>


    <div style="background-color: white">
        <table id="ptable" style="width:100%" class="table table-striped" >
            <thead>
            <tr>
                <th>#</th>
                <th>NAME</th>
                <th>STATUS</th>
                <th>ACTION</th>
            </tr>
            </thead>
            <tbody>
            <% for(let i=0; i< category.length; i++){ %>
            <tr>
                <td><%= category[i].count %></td>
                <td><%= category[i].name %></td>

                <% if (category[i].enabled) { %>
                <td><span class="tags">Enabled</span></td>
                <% } else { %>
                <td><span  class="tags"  style="background: rgb(202, 111, 129)">Disabled</span></td>
                <% } %>
                <td>
                    <a data-toggle="tooltip" title="Edit info" class="btn btn-primary btn-sm" href="/category/updateCategory/<%= category[i]._id%>"
                        >Edit</a>
                    <% if (category[i].enabled) { %>
                    <a href="/category/category/changeStatus/<%= category[i]._id%>/false" data-toggle="tooltip" title="Disable the category"
                        class="btn btn-primary btn-sm">Disable</a>
                    <% } else { %>
                    <a href="/category/category/changeStatus/<%= category[i]._id%>/true" data-toggle="tooltip" title="Enable the category"
                        class="btn btn-primary btn-sm">Enable</a>
                    <% } %>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>

</div>
<br>
<script>
    $(document).ready(function() {
        $('#ptable').DataTable( {
            stateSave: true
        } );
    } );
</script>

