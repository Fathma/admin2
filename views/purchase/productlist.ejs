<%- include('../partials/_head') %>
<div class="container-fluid" style="width:100%;min-height: 700px">
    <div class="register-logo">
        <a href="#"><b>Product List</a>
    </div>

    <div style="background-color: white">
        <table id="ptable" style="width:100%" class="table table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< products.length; i++) { %>

                <tr>
                    <td><%= products[i].product.model%></td>
                    <td><%= products[i].quantity%></td>
                    <!-- formatNumber -->
                    <td><%= products[i].purchasePrice%>TK</td>
                    <!-- formatNumber -->
                    <td><%= products[i].total%>TK</td>
                </tr>
            <% } %>
            </tbody>
        </table>

    </div>

</div>
<%- include('../partials/_footer') %>
