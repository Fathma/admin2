        </div>
    </div>

 <div class="box">
        <div id="RELATED1"></div>
        <button class="collapsible">
            <li class="fa fa-object-group panel-icon" style="padding: 5px"></li><span>ADD PRODUCT</span><span
                style="float:right" id="sp">+</span>
        </button>
        <div class="content" style="background-color: white; display:block">
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">
                        <div class="well">
                            {{# if bundle }}
                            <form action="/promotions/addProduct" method="POST">
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="product">Select Product
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="hidden" name="id" id="id" value="{{ bundle._id }}">
                                        <select name="product" class="form-control inp" id="product">
                                            {{# each product}}
                                            <option value="{{this._id}}">{{this.productName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <center>
                                        <button type="submit" class="btn btn-primary btn-md">Add Product</button>
                                    </center>
                                </div>
                            </form><br>
                            <hr>
                            <table id="ptable" style="width:100%" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{# each bundle.products}}

                                    <tr>

                                        <td>
                                            {{this.productName}}
                                        </td>

                                        <td>
                                            <a href="/promotions/BundleProducts/delete/{{../bundle._id}}/{{this._id}}"
                                                class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            {{else}}
                            <p>You need to complete product registration with image in specification section.
                            </p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 <div class="box">
        <div id="#price"></div>
        <button class="collapsible">
            <li class="fa fa-info panel-icon" style="padding: 5px;"></li><span>Price</span><span
                style="float:right" id="sp">+</span>
        </button>

        <div class="content" style="background-color: white; min-height: 100px; display:block">
            <div class="register-logo">
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">

                        <div class="well" style="background-color: white; ">
                            <form action="/promotions/SaveUpdateBundlePrice" method="POST">
                                <input type="hidden" class="form-control inp" name="id" id="id" value="{{bundle._id}}">
                                    <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="total">Total Selling price</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="total" id="total" value="{{bundle.total}}">
                                    </div>
                                </div>
                                <br>
                                <div class="row" id="discount_amount">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="sellingPrice">Bundle Selling Price
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="sellingPrice" id="sellingPrice" value="{{bundle.sellingPrice}}" required>
                                    </div>
                                </div>
                                <br>
                                
                                <div class="row">
                                    <center>
                                        <button type="submit" class="btn btn-primary btn-md">Update Info</button>
                                    </center>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{# if bundle.usePercentage}}
<script>
    document.getElementById("discount_percentage").style.display = "block";
    document.getElementById("discount_amount").style.display = "none";
</script>
{{else}}
<script>
    document.getElementById("discount_percentage").style.display = "none";
    document.getElementById("discount_amount").style.display = "block";
</script>
{{/if}}




</div>