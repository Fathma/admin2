<div class="container-fluid">


    <div class="box">
        <div id="#PRODUCT"></div>
        <button class="collapsible">
            <li class="fa fa-info panel-icon" style="padding: 5px;"></li><span>COUPON INFO</span><span
                style="float:right" id="sp">+</span>
        </button>

        <div class="content" style="background-color: white; min-height: 100px; display:block">
            <div class="register-logo">
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">

                        <div class="well" style="background-color: white; ">
                            <form action="/promotions/SaveUpdateCoupon" id="cou1" method="POST">
                                <input type="hidden" class="form-control inp" name="id" id="id" value="{{coupon._id}}">
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="name">Coupon Name<span style="color:red">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="name" id="name"
                                            value="{{coupon.name}}">
                                    </div>
                                </div>
                                <br>
                                 <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="code">Coupon Code<span style="color:red">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="code" id="code"
                                            value="{{coupon.code}}">

                                    </div>
                                </div>
                                <br>
                                
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="usePercentageCoupon">Use Percentage
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        {{# if coupon.usePercentageCoupon}}
                                        <input type="checkbox" name="usePercentageCoupon" id="usePercentageCoupon" checked>
                                        {{else}}
                                        <input type="checkbox" name="usePercentageCoupon" id="usePercentageCoupon">
                                        {{/if}}
                                    </div>
                                </div>
                                <br>
                                <div class="row" id="Coupon_percentage">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="CouponPercent">Coupon Percentage<span
                                                style="color:red">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="CouponPercent"
                                            id="CouponPercent" value="{{coupon.CouponPercent}}">
                                    </div>
                                </div>
                        

                                <div class="row" id="Coupon_amount">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="CouponAmount">Coupon Amount<span
                                                style="color:red">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="CouponAmount"
                                            id="CouponAmount" value="{{coupon.CouponAmount}}">
                                    </div>
                                </div>
                                <br>

                                <div class="row">
                                    <center>
                                        <button type="submit" class="btn btn-default btn-md">Update Info</button>
                                    </center>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{# if coupon.usePercentageCoupon}}
<script>
    document.getElementById("Coupon_percentage").style.display = "block";
     document.getElementById("Coupon_percentage").required = true
    document.getElementById("Coupon_amount").style.display = "none";
    document.getElementById("Coupon_amount").required = false
</script>
{{else}}
<script>
    document.getElementById("Coupon_percentage").style.display = "none";
    document.getElementById("Coupon_percentage").required = false
    document.getElementById("Coupon_amount").style.display = "block";
    document.getElementById("Coupon_amount").required = true
</script>
{{/if}}

</div>
<script>
    $(document).ready(function () {

    $('#cou1').validate({ // initialize the plugin
        rules: {
            name: {
               
                required: true,
                maxlength:30
            },
            code: {
                
                required: true,
                maxlength:30
            },
            CouponPercent:{
                required: true,
                digits:true,
                max:100,
                min:1
            },
            CouponAmount:{
                required: true,
                digits:true
            }
        },
        submitHandler: function (form) { 
           return true; 
        }
    });
});
</script>