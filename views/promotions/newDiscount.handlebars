<div class="container-fluid">


    <div class="box">
        <div id="#PRODUCT"></div>
        <button class="collapsible">
            <li class="fa fa-info panel-icon" style="padding: 5px;"></li><span>DISCOUNT INFO</span><span
                style="float:right" id="sp">+</span>
        </button>

        <div class="content" style="background-color: white; min-height: 100px; display:block">
            <div class="register-logo">
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">

                        <div class="well" style="background-color: white; ">
                            <form action="/promotions/SaveDiscount" id="dis" method="POST" >
                                <input type="hidden" class="form-control inp" name="serial" id="serial">
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="name">Discount Name<span style="color:red">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="name" id="name" value="{{discount.name}}">
                                       
                                    </div>
                                </div>
                                <br>
                                 <div class="row">

                                    <div class="col-md-5 col5" >
                                        <label class="lbl" for="type">Discount Type</label>
                                    </div>
                                    <div class="col-md-6">
                                        <select class="form-control inp" name="type" id="type" required>
                                            <option value="">select One</option>
                                            <option value="category">Assigned to Category</option>
                                            <option value="subcategory">Assigned to Sub Category</option>
                                            <option value="brand">Assigned to Brand</option>
                                            <option value="product">Assigned to Product</option>
                                            <option value="totalOrder">Assigned to Total Amount</option>
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="usePercentage">Use Percentage
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="checkbox" name="usePercentage" id="usePercentage" {{# equality discount.usePercentage "on"}} checked{{/equality}}>
                                    </div>
                                </div>
                                <br>
                                <div class="row" id="discount_percentage">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="discountPercent">Discount Percentage<span
                                                style="color:red">*</span>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                         <input type="text" class="form-control inp" name="discountPercent" id="discountPercent"  value="{{discount.discountPercent}}">
                                        
                                    </div>
                                     
                                    
                                </div>
                               
                                
                                <div class="row" id="discount_amount">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="discountAmount">Discount Amount
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="discountAmount" id="discountAmount"value="{{discount.discountAmount}}" required>
                                         
                                        
                                    </div>
                                </div>
                                <br>

                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="maximunDiscountAmount">Maximun Discount Amount
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="maximunDiscountAmount" id="maximunDiscountAmount" value="{{discount.maximunDiscountAmount}}" >
                                    </div>
                                </div>

                                <br>
                               
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="days">Days</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="days" id="days" value="{{discount.days}}">
                                        
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-md-5 col5">
                                        <label class="lbl" for="maxNumber">Maximun Number
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control inp" name="maxNumber" id="maxNumber"value="{{discount.maxNumber}}">
                                    </div>
                                </div>
                                <br>
                
                                <div class="row">
                                    <center>
                                        <button type="submit" class="btn btn-default btn-md">Save</button>
                                    </center>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


  <script>
        document.getElementById("discount_percentage").style.display = "none";
       
  </script>
  
</div>
<br>
<script>
    $(document).ready(function () {

    $('#dis').validate({ // initialize the plugin
        rules: {
            name: {
                alphanumeric:true,
                required: true,
                maxlength:30
            },
             discountPercent:{
                required: true,
                digits:true,
                max:100,
                min:1
            },
            discountAmount:{
                required: true,
                digits:true
            },
            maximunDiscountAmount:{
                required: false,
                digits:true
            },
            days: {
                required: false,
                digits: true
            },
            maxNumber: {
                required: false,
                digits: true
            }
        },
        submitHandler: function (form) { // for demo
            alert('valid form submitted'); // for demo
            return false; // for demo
        }
    });
});
</script>