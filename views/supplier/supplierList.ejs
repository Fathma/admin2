<%- include('../partials/_head') %>
<div class="container-fluid" style="width:100%;min-height: 700px">
    <div class="register-logo">
        <a href="#"><b>Supplier</b>List</a>
    </div>
    
    <div style="background-color: white">
        <table id="ptable" style="width:100%" class="table table-striped" >
            <thead>
            <tr>
                <th>#</th>
                <th>SUPPLIER ID</th>
                <th>NAME</th>
                <th>ADDRESS</th>
                <th>EMAIL</th>
                <th>CONTACT PERSON</th>
                <th>INDUSTRY</th>
                <th>DATE</th>
                <th>ACTION</th>
            </tr>
            </thead>
            <tbody>
        <% for(var i = 0; i< supplier.length; i++) { %>
            <tr>
                <td><%= supplier[i].count %>  </td>
                <td><%=supplier[i].supplier_id %> </td>
                <td class="notranslate"><%=supplier[i].cname %></td>
                <td>
                    <% for(var j = 0; j< supplier[i].address.length; j++){ %>
                        <Strong>Address:</Strong><%=supplier[i].address[j].address %> <br>
                        <Strong>Zip:</Strong><%=supplier[i].address[j].zip %> <br> 
                        <Strong>Telephone:</Strong><%= supplier[i].address[j].contact %> <br><br>
                    <% } %>
                </td>

                <td><%=supplier[i].cemail %></td>
                <td class="notranslate">
                <% for(var k = 0; k< supplier[i].contactPerson.length; k++){ %>
                        <Strong>Name:</Strong> <%=supplier[i].contactPerson[k].contactName %> <br>
                        <Strong>Position:</Strong><%=supplier[i].contactPerson[k].companyPosition %> <br>
                        <Strong>Email:</Strong><%=supplier[i].contactPerson[k].email %> <br>
                        <strong>Mobile:</strong> <%=supplier[i].contactPerson[k].mobile %><br>
                        <Strong>Telephone:</Strong><%=supplier[i].contactPerson[k].telephone %> <br>
                        <Strong>Extention:</Strong><%=supplier[i].contactPerson[k].extention%> <br>
                    <br>
                <% } %>
                </td>
                <td><%=supplier[i].industry%></td>
              
                <td><%=  moment(supplier[i].created).format( 'MMM-DD-YYYY') %></td>
                <td>
                    <a href="/supplier/Edit/<%=supplier[i]._id%>" data-toggle="tooltip" 
                        title="Edit info" class="btn btn-success" style="padding:0%"> <img src="https://img.icons8.com/windows/20/ffffff/edit.png"></a>
                    <a href="/supplier/delete/<%=supplier[i]._id%>" data-toggle="tooltip" 
                        title="Delete Supplier" class="btn btn-danger" style="padding:0%"><img src="https://img.icons8.com/ios/20/ffffff/x.png"></a>
                </td>
            </tr>
        <% } %>
            </tbody>
        </table>

    </div>

</div>
<br>
<script>
    $(document).ready(function() {
        $('#ptable').DataTable( {
            stateSave: true
        } );
    } );
</script>
<%- include('../partials/_footer') %>